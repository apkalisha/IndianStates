<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        tools:context=".AboutFragment">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/our_mission"
            android:textColor="#b22222"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv1"
            android:layout_marginTop="20dp"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/dzone_Intro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/contibutors" />

        <TextView
            android:id="@+id/about_tv"
            android:layout_below="@id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:padding="10dp"
            android:textColor="#0000ff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            android:layout_below="@id/about_tv"
            android:padding="10dp"
            android:textColor="#0000ff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_tv1"
            android:elevation="6dp"
            android:padding="10dp"
            android:textColor="#0000ff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_tv2"
            android:elevation="6dp"
            android:padding="10dp"
            android:textColor="#0000ff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_tv3"
            android:elevation="6dp"
            android:padding="10dp"
            android:textColor="#0000ff"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>